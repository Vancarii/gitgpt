{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-build",
        "buildCommand": "npm install --legacy-peer-deps && npx expo export:web"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "/web-build/$1" }
  ]
}
